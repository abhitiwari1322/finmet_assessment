<h1>Record Match</h1>

<%= link_to "Back to Home", root_path, type: "button" %>
<%= link_to "Match History", matches_path, type: "button" %>

<div class="form-header">
</div>
<%= form_with model: @match, html: { class: "match-form" } do |f| %>

  <div class="form-group">
    <%= f.label :winner_id, "Winner" %>
    <%= f.collection_select :winner_id, @players, :id, :name %>
  </div>

  <div class="form-group">
    <%= f.label :loser_id, "Loser" %>
    <%= f.collection_select :loser_id, @players, :id, :name %>
  </div>

  <div class="form-actions">
    <%= f.submit "Save Match", class: "btn" %>
  </div>

<% end %>
 
<style>
  .form-group {
    margin-bottom: 1rem;
  }
  .match-form {
    display: grid;
    gap: 0.75rem;
    align-items: center;
    max-width: 480px;
  }
  .form-actions {
    margin-top: 0.5rem;
  }
  .match-form .btn {
    padding: 0.6rem 1rem;
    border-radius: 6px;
    font-size: 1rem;
  }
  .form-header {
    margin-bottom: 1rem;
  }
</style>